@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="" />
            <input class="text" type="password" asp-for="Password" placeholder="Password" required="" />
            <input class="text w3lpass" type="password" asp-for="ConfirmedPassword" placeholder="Confirm Password" required="" />
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="IsAgree" class="checkbox">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Have an Account? <a asp-action="SignIn" class="btn btn-primary"> SignIn Now!</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
    }
