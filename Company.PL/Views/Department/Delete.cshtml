@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Department</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Department">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-from-label"></label>
                <input asp-for="@Model.Code" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-from-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />
            </div>
            <br />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-success" asp-action="Index" asp-route-id="@Model.Id">Back To List</a>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
    }
